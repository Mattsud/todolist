<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :priority %>
  <%= f.text_field :priority %>
  <% if @task.persisted? %>
    <%=f.label :status, "Done ?" %>
    <%= f.check_box :status %>
  <% end %>
  <%= f.submit %>
<% end %>
